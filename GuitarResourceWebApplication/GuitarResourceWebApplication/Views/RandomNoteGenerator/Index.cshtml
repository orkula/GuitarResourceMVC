<script>

        $(function () {
            function randItem(arr) {
                var itemIndex = Math.floor(Math.random() * arr.length);
                var itemValue = arr[itemIndex]
                arr.splice(itemIndex, 1);
                return itemValue;
            }

            var button = document.getElementById("buttonrandomnote");
            var numberArray = ["A", "A#", "B", "C", "C#", "D", "D#", "E", "F", "F#", "G", "G#"];
            var naturalArray = ["A", "B", "C", "D", "E", "F", "G"];
            var accidentalArray = ["A#", "C#", "D#", "F#", "G#"];
            button.onclick = function () {
                if ($("[name='natural notes']").prop("checked")) {
                    var note = naturalArray[Math.floor(Math.random() * naturalArray.length)];
                    $("#outputboxnotes").text(note);
                } else if ($("[name='accidentals']").prop("checked")) {
                    var note = accidentalArray[Math.floor(Math.random() * accidentalArray.length)];
                    $("#outputboxnotes").text(note);
                } else {
                    var note = numberArray[Math.floor(Math.random() * numberArray.length)];
                    $("#outputboxnotes").text(note);
                }
            };
        });

</script>
